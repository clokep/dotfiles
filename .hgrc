bitbucket.org = 46:de:34:e7:9b:18:cd:7f:ae:fd:8b:e3:bc:f4:1a:5e:38:d7:ac:24
hg.mozilla.org = af:27:b9:34:47:4e:e5:98:01:f6:83:2b:51:c9:aa:d8:df:fb:1a:27

[bugzilla]
username = clokep@gmail.com

# Include passwords in a seperate file that will be ignored.
%include .hgpasswords

# Include OS specific things in a separate file.
%include .hg$OS
