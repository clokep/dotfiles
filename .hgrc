[ui]
username = Patrick Cloke <clokep@gmail.com>
merge = internal:merge
# hgignore across all projects.
#ignore = ~/.hgignoreglobal

[defaults]
qnew = -U
import = --encoding utf-8
qimport = --encoding utf-8

[extensions]
hgext.convert = 
#hggit = ~/dotfiles/hg-git/hggit
hgsubversion = ~/dotfiles/hgsubversion/hgsubversion
purge = 
rebase = 
#tortoisehg.util.hgshelve=
color = 
mq = 
mqext = ~/.mozbuild/version-control-tools/hgext/mqext
transplant = 
churn = 
histedit = 
pager = 
progress = 
record = 
bzexport = ~/.mozbuild/version-control-tools/hgext/bzexport
qimportbz = ~/.mozbuild/version-control-tools/hgext/qimportbz
#mozext = ~/.mozbuild/version-control-tools/hgext/mozext
hgbb = ~/dotfiles/hgbb/hgbb.py
firefoxtree = ~/.mozbuild/version-control-tools/hgext/firefoxtree
hgwatchman = ~/dotfiles/hgwatchman/hgwatchman
bundleclone = ~/.mozbuild/version-control-tools/hgext/bundleclone
push-to-try = ~/.mozbuild/version-control-tools/hgext/push-to-try

[mqext]
mqcommit = auto

[bzexport]
username = clokep@gmail.com
# URL of the Bugzilla server
bugzilla = https://bugzilla.mozilla.org
# URL of the corresponding BzAPI server
api_server = https://api-dev.bugzilla.mozilla.org/latest/

[qimportbz]
msg_format = Bug %(bugnum)s - %(title)s %(flags)s

[mozext]
ircnick = clokep

[diff]
git = 1
unified = 8
showfunc = 1

[bb]
username = clokep
default_method = https

[alias]
show = log --patch --rev
qexport = !hg qapplied | xargs -I@ hg export @ -o @.diff

[hostfingerprints]
