LESS=-FRX;
export LESS

# PATH=$PATH:$MSYS_MOZBUILD/llvm/bin:$MSYS_MOZBUILD/clang/bin
export PATH=$(pyenv root)/shims:/usr/local/opt/ruby/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/X11/bin:$HOME/.cargo/bin:$HOME/.local/bin:$PATH:$PATH

# CLI Colors
export CLICOLOR=1

# History Control
export HISTCONTROL=ignoredups
export HISTCONTROL=ignoreboth
export HISTTIMEFORMAT='%Y-%m-%d %H:%M:%S '
export HISTFILESIZE=2000
export HISTIGNORE="[ ]*:&:bg:fg:exit" # Ignore some controlling instructions
export PROMPT_COMMAND="history -a"

# Configure ccache
export CCACHE_COMPRESS=""
